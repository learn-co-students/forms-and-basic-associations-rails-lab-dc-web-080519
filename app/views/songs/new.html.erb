<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br><br>

  <label>Notes</label><br>
  <textarea name="song[note_contents][]" id = "song_notes_1" rows="8" cols="80"></textarea>
  <textarea name="song[note_contents][]" id = "song_notes_2" rows="8" cols="80"></textarea>
  <textarea name="song[note_contents][]" id = "song_notes_3" rows="8" cols="80"></textarea>
  <textarea name="song[note_contents][]" id = "song_notes_4" rows="8" cols="80"></textarea>

  <%= f.submit %>
<% end %>

